<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.1.xsd
       http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-4.1.xsd">

    <!-- 扫描 controller -->
    <context:component-scan base-package="com.baomidou.kisso.springmvc.controller"/>

    <!-- 定义视图解析器 -->
    <bean id="velocityConfig"
          class="org.springframework.web.servlet.view.velocity.VelocityConfigurer">
        <property name="resourceLoaderPath" value="/WEB-INF/views/"/>
        <property name="configLocation" value="classpath:properties/velocity.properties"/>
        <!--<property name="ssoConfig" value="classpath:properties/sso.properties"/>-->
    </bean>
    <bean id="viewResolver"
          class="org.springframework.web.servlet.view.velocity.VelocityLayoutViewResolver">
        <property name="suffix" value=".vm"/>
        <property name="cache" value="false"/>
        <property name="contentType" value="text/html;charset=utf-8"/>
        <property name="dateToolAttribute" value="date"/><!--日期函数名称-->
        <property name="numberToolAttribute" value="number"/><!--数字函数名称-->
        <property name="layoutUrl" value="layout/default.vm"/>
        <property name="toolboxConfigLocation" value="/WEB-INF/toolbox.xml"/>
    </bean>

    <!-- 重定向视图控制器标签 -->
    <mvc:redirect-view-controller path="/redirect"
                                  redirect-url="/status" context-relative="true" status-code="301"
                                  keep-query-params="true"/>

    <mvc:default-servlet-handler/>

    <!-- 状态控制器标签 -->
    <mvc:status-controller path="/status" status-code="200"/>

    <!-- 带状态的视图控制器标签 -->
    <mvc:view-controller path="/error/**" status-code="200"/>

    <!-- 配置静态资源，直接映射到对应的文件夹，DispatcherServlet 不处理 -->
    <mvc:resources mapping="/static/**" location="/WEB-INF/static/"/>

    <context:property-placeholder location="classpath:properties/sso.properties" />

    <!--  kisso 注入初始化，也支持使用 web.xml 初始化 -->
    <bean id="initKisso" class="com.baomidou.kisso.springmvc.WebKissoConfigurer" init-method="initKisso">
        <property name="ssoConfig" ref="ssoConfig"/>
        <!--<property name="ssoPropPath" value="properties/sso.properties"/>-->
    </bean>
    <bean id="ssoConfig" class="com.baomidou.kisso.SSOConfig">
        <property name="cookieName" value="${sso.cookie.name}"/>
        <property name="signkey" value="${sso.secretkey}"/>
        <property name="logoutUrl" value="${sso.logout.url}"/>
        <property name="loginUrl" value="${sso.login.url}"/>
        <property name="cookieDomain" value="${sso.cookie.domain}"/>
        <property name="cache" ref="redisCache"></property>
        <property name="cacheExpires" value="${sso.cache.expires}"></property>
    </bean>
    <bean id="redisCache" class="${sso.cache.class}"></bean>


    <mvc:interceptors>
        <!-- SSO 拦截器 -->
        <!-- path 对所有的请求拦截使用/**，对某个模块下的请求拦截使用：/myPath/* -->
        <mvc:interceptor>
            <mvc:mapping path="/**"/>
            <bean class="com.baomidou.kisso.web.interceptor.SSOSpringInterceptor"/>
        </mvc:interceptor>
        <!-- SSO 系统权限拦截器 -->
        <mvc:interceptor>
            <mvc:mapping path="/test/permission/**"/>
            <bean class="com.baomidou.kisso.web.interceptor.SSOPermissionInterceptor">
                <property name="authorization">
                    <bean class="com.baomidou.kisso.springmvc.controller.permission.SysAuthorization"/>
                </property>
                <property name="illegalUrl" value="/test/permission/illegalAccess.html"/>
            </bean>
        </mvc:interceptor>
    </mvc:interceptors>

    <mvc:annotation-driven>
    </mvc:annotation-driven>
</beans>